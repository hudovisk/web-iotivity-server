      ref  : "origin/staging",
      repo : "git@github.com:hudovisk/web-iotivity-server.git",
      path : "/home/ec2-user/web-iotivity-staging",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env dev"
